@page "/"
@inject IZoraGenDetails ZoraGenDetails

@if (initialised)
{
    <div class="details-wrapper">
        <GameOptionInput />
        <GameTypeInput />
        <HeroNameInput />
        <ChildNameInput />
        <GameIdInput />
        <BehaviourInput />
        <AnimalInput />
        @* This option is also not available in the windows client ¯\_(ツ)_/¯
         * <VasuRingInput /> *@
    </div>
}

@functions
{
    private bool initialised;

    protected override async Task OnInitAsync()
    {
        await ZoraGenDetails.InitAsync();
        initialised = true;
    }
}
