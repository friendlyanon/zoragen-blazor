@inject IZoraGenDetails ZoraGenDetails

<div class="form-group">
    <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="linked"
               checked="@(ZoraGenDetails.IsLinkedGame ? "checked" : null)"
               onchange="@LinkedChangeHandler" />
        <label class="custom-control-label" for="linked">Linked Game</label>
    </div>
    <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="hero-quest"
               checked="@(ZoraGenDetails.IsHeroQuest ? "checked" : null)"
               onchange="@HeroChangeHandler" />
        <label class="custom-control-label" for="hero-quest">Hero's Quest</label>
    </div>
</div>

@functions {
    private void LinkedChangeHandler(UIChangeEventArgs e)
    {
        ZoraGenDetails.IsLinkedGame = (bool) e.Value;
    }
    private void HeroChangeHandler(UIChangeEventArgs e)
    {
        ZoraGenDetails.IsHeroQuest = (bool) e.Value;
    }
}

