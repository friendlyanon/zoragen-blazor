<div class="hero-input-wrapper name-validation">
    <h4>Hero:</h4>
    <div class="hero-flex">
        <div class="form-group">
            <input
                class="form-control"
                type="text"
                minlength="0"
                maxlength="5"
                size="8"
                pattern="^[a-zA-Z ]*[a-zA-Z]$|^$"
                bind="@ZoraGenDetails.Hero" />
        </div>
    </div>
</div>
